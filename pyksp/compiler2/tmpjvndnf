
import rope.base.project
from rope.base import libutils

myproject = rope.base.project.Project(
    'C:/packages/pyksp')
#myproject.validate('C:/packages/pyksp/pyksp/compiler/stack.py')
myproject.validate()
ropy = libutils.path_to_resource(myproject, 'C:/packages/pyksp/pyksp/compiler/stack.py')

from rope.refactor.rename import Rename
changes = Rename(myproject, ropy, 5420).get_changes('kLocal', docs=True)
myproject.do(changes)

myproject.close()
