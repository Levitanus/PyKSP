
import rope.base.project
from rope.base import libutils

myproject = rope.base.project.Project(
    'E:/packages/pyksp')
#myproject.validate('E:/packages/pyksp/pyksp/functions.py')
myproject.validate()
ropy = libutils.path_to_resource(myproject, 'E:/packages/pyksp/pyksp/functions.py')

from rope.refactor.rename import Rename
changes = Rename(myproject, ropy, 4440).get_changes('cashed', docs=True)
myproject.do(changes)

myproject.close()
