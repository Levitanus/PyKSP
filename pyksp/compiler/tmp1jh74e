
import rope.base.project
from rope.base import libutils

myproject = rope.base.project.Project(
    'C:/packages/pyksp')
#myproject.validate('C:/packages/pyksp/pyksp/compiler/simple_test2.py')
myproject.validate()
ropy = libutils.path_to_resource(myproject, 'C:/packages/pyksp/pyksp/compiler/simple_test2.py')

from rope.refactor.rename import Rename
changes = Rename(myproject, ropy, 70).get_changes('ReturnType', docs=True)
myproject.do(changes)

myproject.close()
